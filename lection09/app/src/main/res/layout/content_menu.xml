<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".presentationlayer.MainActivity"
    >

    <Button
        android:id="@+id/sample_webview"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="WebView Sample"
        />

    <Button
        android:id="@+id/sample_webview_interaction"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="WebView Interaction Sample"
        />

    <Button
        android:id="@+id/film_list"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Film List Sample"
        />
</androidx.appcompat.widget.LinearLayoutCompat>